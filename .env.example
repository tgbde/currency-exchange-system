# 汇率系统环境配置示例
# 复制此文件为 .env 并填入实际值

# ===================
# 应用配置
# ===================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# ===================
# 数据库配置
# ===================
DATABASE_URI=sqlite:///instance/currency_exchange.db
# 或使用 PostgreSQL
# DATABASE_URI=postgresql://username:password@localhost:5432/currency_exchange

# ===================
# API配置
# ===================
# 汇率API密钥（如果需要）
EXCHANGE_API_KEY=your-api-key-here
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4/latest

# ===================
# Redis配置（如果使用缓存）
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# 云平台配置
# ===================

# AWS配置
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-s3-bucket

# 阿里云配置
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-secret-key
ALIYUN_REGION=cn-hangzhou

# 腾讯云配置
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_REGION=ap-guangzhou

# ===================
# Docker配置
# ===================
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# ===================
# 监控和通知
# ===================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# ===================
# 安全配置
# ===================
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# ===================
# 日志配置
# ===================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===================
# 性能配置
# ===================
WORKERS=4
THREADS=2
MAX_CONNECTIONS=1000
CACHE_TIMEOUT=300

# ===================
# 开发配置
# ===================
DEBUG_TOOLBAR=False
PROFILER_ENABLED=False
TESTING=False